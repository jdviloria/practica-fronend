azul = #22BCE0
gris_oscuro = #444
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px


header
	background gris_oscuro
	color white
	padding 0.5em

	.logo
		border-right 1px solid azul
		width 60px
